{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "/api/articles/:article_id": {
    "description": "serves an object of a given article by ID",
    "queries": [],
    "exampleResponse": {
      "articles": 
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
    }
  },
  "/api/articles/:article_id/comments": {
    "description": "serves an object containing the comments of a given article by ID",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 1,
          "votes": 0,
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "/api/users": {
    "description": "serves an array of objects containing registered users.",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "username": "someUsername",
          "name": "Joe Bloggs",
          "avatar_url": "https://someurl.com/avatar.png"
        }
      ]
    }
  }
}
